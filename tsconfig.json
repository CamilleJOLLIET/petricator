{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
}